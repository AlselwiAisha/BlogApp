 <section class="container mt-5">
  <div class="blist-group-item list-group-item-light border card mb-2">
      <div class="mb-2">
          <div class="card-body m-3 w-75">
            <h2 class="card-title text-black"><%= @post.title %><h2>
            <h4 class="card-text"><%=@post.text%></h4>
            <h6 class="card-text d-flex  justify-content-end"><small class="text-body-secondary">Comments : <%=@post.comments_counter%> Likes : <%=@post.likes_counter%></small></h6>
         </div>
      </div>
  </div>
    <% if @post.comments_counter !=0%>
    <div class="card mb-5">
      <div class="card-body ">
        <% @post.comments.each do |comment| %>
        <h5><%=comment.user.name%> : <%=comment.text%> </h5>
        <% end %>
        <% end %>
      </div>
    </div>
 </section>
