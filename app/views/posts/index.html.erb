<section class="container">
<h1 class="mt-3 mb-3 ">Here is a list of posts for <%=@user.name%> :<h1>

  <div class="d-flex justify-content-right mb-2">
  <button class="btn btn-primary ">
    <%= link_to "Add New Post", new_user_post_path(@user) , class: "text-white"  %>
  </button>
</div>
  <div class="blist-group-item list-group-item-light border card mb-2 btn">
    <%= render @user%>
 </div>
  <% @posts.each do |post| %>
 <a href='/users/<%=@user.id%>/posts/<%=post.id%>' class="blist-group-item list-group-item-action list-group-item-light border card mb-2 btn">
   <div class="mb-2">
     <%= render post%>
 </div></a>
  <% if post.comments_counter !=0%>
  <div class="card mb-5">
  <div class="card-body ">
  <% post.recent_comments.each do |comment| %>
    <h5><%=comment.user.name%> : <%=comment.text%> </h5>
    <% end %>
    <% end %>
    </div>
    </div>
<% end %>
<div class="d-flex justify-content-center">
   <button class="btn btn-secondary mb-2">
        Pagination
  </button>
</div>
</section>