<section class=container>
<h1>Create new post</h1>
<%= form_with model: [@user,@add_new_post], url: user_posts_path(@user), method: :post, local: true, scope: :add_new_post do |f| %>
  <div >
    <%= f.label :title %><br>
    <%= f.text_field :title, class:"form-control" %>
    </div>
  <div >
    <%= f.label :text %><br>
    <%= f.text_field :text, class:"form-control" %> 
    </div>
  <div >
    <%= f.submit "Create Post" , class: "btn btn-primary text-white mt-2"%>
  </div>
<% end %>
<section>